{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company_name</th>
                <th>Company_description</th>
                <th>Company_logo</th>
                <th>Manager_fullname</th>
                <th>Manager_email</th>
                <th>Manager_tel</th>
                <th>Manager_linkedin</th>
                <th>Manager_fb</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.companyName }}</td>
                <td>{{ customer.companyDescription }}</td>
                <td>{{ customer.companyLogo }}</td>
                <td>{{ customer.managerFullname }}</td>
                <td>{{ customer.managerEmail }}</td>
                <td>{{ customer.managerTel }}</td>
                <td>{{ customer.managerLinkedin }}</td>
                <td>{{ customer.managerFb }}</td>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_new') }}">Create new</a>
{% endblock %}
