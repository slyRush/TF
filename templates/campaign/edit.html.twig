{% extends 'base.html.twig' %}

{% block title %}Edit Campaign{% endblock %}

{% block body %}
    <h1>Edit Campaign</h1>

    {{ include('campaign/_form.html.twig', {'button_label': 'Update'}) }}

    <div>Candidats présentés :</div>
    {% for cc in campaign.campaignCandidate %}
        {{ cc.candidate.firstname ~ ' ' ~ cc.candidate.lastname }} / {{ cc.candidate.jobTitle }}
    {% endfor %}

    <div>Candidats retenus :</div>
    {% for cc in campaign.campaignCandidate %}
        {% if cc.validByCustomer %}
            {{ cc.candidate.firstname ~ ' ' ~ cc.candidate.lastname }} / {{ cc.candidate.jobTitle }}
        {% endif %}
    {% endfor %}

    <a href="{{ path('campaign_index') }}">back to list</a>

    {{ include('campaign/_delete_form.html.twig') }}
{% endblock %}
